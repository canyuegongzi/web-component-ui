.home .hero h1{
    // font-size: 2rem;
    margin-top: 3rem;
    letter-spacing: 4px;
}

.sidebar::-webkit-scrollbar{
    width: 2px;
}
.sidebar::-webkit-scrollbar-thumb{
    background: #e8e8e8;
}

body .theme-default-content code{
    color: #ff5656;
    background: rgba(255, 185, 185, 0.24);
}

blockquote{
    color: #6a737d;
    border-left: 0.2rem solid #dfe2e5;
    margin: 1rem 0;
    padding: 0.8rem 0 0.8rem 1rem;
    background: #fbfbfb;
    border-radius: 6px;
    font-size: 0.95rem;
}

.page .theme-default-content pre,
.page .theme-default-content pre[class*="language-"]{
    padding: 2rem 1.5rem 1rem;
}
.page div[class*="language-"] pre, div[class*="language-"] pre[class*="language-"]{
    position: static;
}

div[class*="language-"] pre[class*="language-"]::-webkit-scrollbar{
    background: #2d2d2d;
    height: 4px;
}
div[class*="language-"] pre[class*="language-"]::-webkit-scrollbar-track{
    background: #2d2d2d;
    height: 4px;
}
div[class*="language-"] pre[class*="language-"]::-webkit-scrollbar-thumb{
    background: #565656;
    height: 4px;
}

div[class*="language-"]::after, pre[class*="language-"]::after, pre[class*="language-"]::before{
    content: '';
    height: 10px;
    width: 10px;
    background: #d50000;
    display: inline-block;
    border-radius: 50%;
    position: absolute;
    top: 12px;
    left: 12px;
}

pre[class*="language-"]::after{
    background: #f0ae00;
    left: 27px;
}

pre[class*="language-"]::before{
    background: #00b800;
    left: 42px;
}

h1{
    font-size: 2rem !important;
}
h2{
    font-size: 1.25rem !important;
}
h3{
    font-size: 1rem !important;
}


@media screen and (max-width: 600px) {
    .theme-default-content pre,
    .theme-default-content pre[class*="language-"]{
        line-height: 18px !important;
        padding: 2rem 1rem 0.8rem !important;
    }
    .theme-default-content pre code,
    .theme-default-content pre[class*="language-"] code{
        font-size: 13px;
        letter-spacing: 0;
    }
    .theme-default-content div[class*="language-"]{
        margin: 0.85rem -15px !important;
    }
    div[class*="language-"]::after, pre[class*="language-"]::after, pre[class*="language-"]::before{
        height: 8px;
        width: 8px;
    }
    pre[class*="language-"]::after{
        left: 25px;
    }
    pre[class*="language-"]::before{
        left: 38px;
    }
    html{
        font-size: 14px;
    }
    h1{
        font-size: 1.5rem !important;
    }
    body{
        font-size: 14px !important;
        letter-spacing: 1px;
    }
    .theme-default-content{
        padding: 15px !important;
    }
    .sidebar-heading{
        font-size: 16px;
        font-weight: bold;
        padding: 0px 12px;
        line-height: 28px;
    }
    .sidebar > .sidebar-links > li:not(:first-child){
        margin-top: 10px;
    }
}